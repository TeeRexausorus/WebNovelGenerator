(function() {

        var detector = function() {
            setTimeout(function() {

                if(!document.getElementsByClassName) return;
                var ads = document.getElementsByClassName('banner_ad'),
                    ad  = ads[ads.length - 1];

                if(!ad || ad.innerHTML.length == 0 || ad.clientHeight === 0) {
                    ww_ga('send', {
                        'hitType': 'event',
                        'eventCategory': 'AdBlocker',
                        'eventAction': 'Blocked',
                        'nonInteraction': 1
                    });

                    console.log('Ad Blocker Detected');
                } else {
                    ww_ga('send', {
                        'hitType': 'event',
                        'eventCategory': 'AdBlocker',
                        'eventAction': 'Not Blocked',
                        'nonInteraction': 1
                    });

                    console.log('No Ad Blocker');
                }
            }, 2000);
        }

    
       detector();
})();
</script>
